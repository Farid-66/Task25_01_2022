@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 mb-4">

                            <!-- Illustrations -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Illustrations</h6>
                                </div>
                                <div class="card-body">
                                    <p>
                                        Add some quality, svg illustrations to your project courtesy of <a target="_blank" rel="nofollow" href="https://undraw.co/">unDraw</a>, a
                                        constantly updated collection of beautiful svg images that you can use
                                        completely free and without attribution!
                                    </p>
                                </div>
                            </div>

                            <!-- Approach -->

                            
                            <div class="row">

                                @foreach (var item in Model)
                                {
                                    <div class="col-3">
                                        <div class="card shadow mb-4">
                                            <div class="card-header d-flex justify-content-between py-3">
                                                <h6 class="m-0 font-weight-bold text-primary">@item.Title</h6>
                                                <h6 class="m-0 font-weight-bold text-primary">@item.CreateDate</h6>
                                            </div>
                                            <div class="card-body">
                                                <div style="margin: 18px 0px"><i style="font-size: 45px; color:#4e73df !important;" class="@item.Icon"></i></div>
                                                <p>
                                                    @item.Content
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }

                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

